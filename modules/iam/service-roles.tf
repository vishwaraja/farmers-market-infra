# EKS OIDC Provider Role (for service accounts)
resource "aws_iam_role" "eks_oidc_role" {
  name = "${var.project_name}-${var.environment}-eks-oidc-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRoleWithWebIdentity"
        Effect = "Allow"
        Principal = {
          Federated = var.eks_oidc_provider_arn
        }
        Condition = {
          StringEquals = {
            "${replace(var.eks_oidc_provider_arn, "/^.*oidc-provider//", "")}:sub" = "system:serviceaccount:${var.kong_namespace}:kong"
            "${replace(var.eks_oidc_provider_arn, "/^.*oidc-provider//", "")}:aud" = "sts.amazonaws.com"
          }
        }
      }
    ]
  })

  tags = merge(var.tags, {
    Name        = "${var.project_name}-${var.environment}-eks-oidc-role"
    Environment = var.environment
    Project     = var.project_name
    Purpose     = "eks-oidc"
  })
}

